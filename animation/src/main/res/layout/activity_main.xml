<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alibaba.animation.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/superman"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明动画"
        android:id="@+id/animation_activity_btn01"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="渐变动画"
        android:id="@+id/animation_activity_btn02"
        android:layout_below="@+id/animation_activity_btn01"
        android:layout_alignLeft="@+id/animation_activity_btn04"
        android:layout_alignStart="@+id/animation_activity_btn04" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位移动画"
        android:id="@+id/animation_activity_btn03"
        android:layout_below="@+id/animation_activity_btn02"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转动画"
        android:id="@+id/animation_activity_btn04"
        android:layout_below="@+id/animation_activity_btn03"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多个动画"
        android:id="@+id/animation_activity_btn05"
        android:layout_below="@+id/animation_activity_btn04"
        android:layout_alignLeft="@+id/animation_activity_btn04"
        android:layout_alignStart="@+id/animation_activity_btn04" />
</RelativeLayout>
